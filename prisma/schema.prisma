// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Users {
  id             String        @id @default(uuid())
  name           String        @db.VarChar(20)
  email          String        @unique @db.VarChar(40)
  password       String        @db.VarChar(100)
  organisationId String?       @db.VarChar(50)
  organisation   Organisation? @relation(fields: [organisationId], references: [id])
  image          String        @default("https://placehold.co/400x400/png") @db.VarChar()
}

model Organisation {
  id     String   @id @default(uuid())
  name   String   @db.VarChar(30)
  Users  Users[]
  Agents Agents[]
}

model Country {
  id    String  @id @default(uuid())
  name  String  @db.VarChar(20)
  State State[]
}

model State {
  id        String  @id @default(uuid())
  name      String  @db.VarChar(20)
  countryId String  @db.VarChar(30)
  Country   Country @relation(fields: [countryId], references: [id])
  City      City[]
}

model City {
  id      String   @id @default(uuid())
  name    String   @db.VarChar(30)
  stateId String   @db.VarChar(30)
  State   State    @relation(fields: [stateId], references: [id])
  Agents  Agents[]
}

model Agents {
  id             String       @id @default(uuid())
  orgName        String       @db.VarChar(30)
  name           String       @db.VarChar(30)
  email          String       @db.VarChar(40)
  phone          Int          @db.Integer
  cityId         String       @db.VarChar(30)
  City           City         @relation(fields: [cityId], references: [id])
  organisationId String       @db.VarChar(30)
  Organisation   Organisation @relation(fields: [organisationId], references: [id])
}
